{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "plugins": ["import", "typescript", "promise", "unicorn"],
  "jsPlugins": ["./src/index.js"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "off",
    "restriction": "off"
  },
  "rules": {
    "unicorn/require-module-specifiers": "off",
    "no-control-regex": "off",
    "typescript/no-extraneous-class": "off",
    "unicorn/prefer-set-has": "off",
    "unicorn/prefer-array-find": "off",
    "unicorn/consistent-function-scoping": "off",
    "import/no-unassigned-import": "off",
    "no-unused-vars": "error",
    "no-console": "off",
    "eqeqeq": "error",
    "no-debugger": "error",
    "no-var": "error",
    "no-non-null-assertion": "off",
    "prefer-const": "error",
    "typescript/no-explicit-any": "error",
    "typescript/no-non-null-assertion": "warn",
    "import/no-cycle": "error",
    "import/no-self-import": "error",
    "promise/no-return-wrap": "error",
    "unicorn/no-null": "off",
    "unicorn/filename-case": "off",
    "@noaqh/lint/no-try-catch-in-server": "error",
    "@noaqh/lint/no-prisma-in-server": "error",
    "@noaqh/lint/no-with-relation-method": "error",
    "@noaqh/lint/no-findby-searchby-method": "error",
    "@noaqh/lint/no-input-output-params-type": "error",
    "@noaqh/lint/no-data-input-params-arg": "error",
    "@noaqh/lint/no-expect-in-if": "error",
    "@noaqh/lint/no-default-param": "error",
    "@noaqh/lint/no-n-plus-one-query": "warn",
    "@noaqh/lint/no-features-import-flows": "error",
    "no-await-in-loop": "off"
  }
}
